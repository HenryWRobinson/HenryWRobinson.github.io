{  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   "title": {
        "text": "Total Monthly Drug Costs For the NHS",
        "anchor": "start",
        "color": "black",
        "subtitle": "Source: NHS Prescription Cost Analysis monthly data",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "subtitleColor": "black"
},
  "data": {
    "url": "https://raw.githubusercontent.com/HenryWRobinson/HenryWRobinson.github.io/main/Project/Data/MonthlyAggregateNHSnic.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "id",
          "type": "temporal",
          "title": "Time"
        },
        "y": {
          "field": "NIC",
          "type": "quantitative",
          "title": "Net Ingredient Cost for the NHS(£)",
          "scale": {"domain": [500000000, 900000000]}
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "NIC",
          "on": "id"
        }
      ],
      "encoding": {
        "x": {
          "field": "id",
          "type": "temporal"
        },
        "y": {
          "field": "NIC",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "NIC",
          "on": "id",
          "params": true
        },
        {"calculate": "'R²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
